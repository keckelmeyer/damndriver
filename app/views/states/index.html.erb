<div class="title">
  <h2>States <span class="byline">for resources</span></h2>
</div>
<%= link_to 'New State', new_state_path( :anchor =>"yield") %>
<table>
  <tr>state
    <th width="150">Name</th>
    <th colspan="3"></th>
  </tr>



  <% @states.each do |state| %>
      <tr>
        <td><%= state.name %></td>
        <td><%= state.abvr %></td>
        <td width="10"><%= link_to 'Show', state_path(state, :anchor =>"yield") %></td>
        <td width="10"><%= link_to 'Edit', edit_state_path(state, :anchor =>"yield") %></td>
        <td width="10"><%= link_to 'Destroy', state_path(state),
                                   method: :delete,
                                   data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
</table>
